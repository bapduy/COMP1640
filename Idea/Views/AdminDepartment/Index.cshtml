@model IEnumerable<Idea.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<style>
    body{
        background-color: #cdf2ee;
    }
</style>

<h1>Department Overview</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" style="margin-right: 20px;color: green">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" style="margin-right: 20px; color: blue">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" style="color: red">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
