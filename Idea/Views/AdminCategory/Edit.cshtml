@model Idea.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<style>
    body{
        background-color: #cdf2ee;
    }
</style>

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group" style="margin-bottom: 20px;">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-bottom: 20px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-bottom: 20px;">
    <a asp-action="Index" class="btn btn-secondary">Back to Category Overview</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
