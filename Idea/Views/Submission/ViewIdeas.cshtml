@model Idea.Models.Submission

@{
    ViewData["Title"] = "Details";
    var Ideas = (List<NIdea>)ViewData["Ideas"];
}

<style>
    body {
        background-color: #ffccff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
    }

    h1 {
        font-size: 28px;
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    .details-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 30px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .details-container dt {
        font-weight: bold;
        color: #555;
    }

    .details-container dd {
        margin-bottom: 10px;
        color: #666;
    }

    .action-button {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .action-button a {
        margin: 0 10px;
    }

    .table-container {
        max-width: 800px;
        margin: 0 auto;
        overflow-x: auto;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .styled-table th, .styled-table td {
        padding: 12px 15px;
        text-align: left;
        color: #333;
    }

    .styled-table thead {
        background-color: #4CAF50;
        color: #ffffff;
    }

    .styled-table tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .styled-table tbody tr:hover {
        background-color: #e0e0e0;
    }

    .styled-table tbody td a {
        margin-right: 10px;
    }

    .back-button {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .back-button a {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
    }
</style>

<div class="details-container">
    <h1>@ViewData["Title"]</h1>
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Deadline_1)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Deadline_1)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Deadline_2)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Deadline_2)
        </dd>
    </dl>
</div>

@if ((DateTime.Now - Model.Deadline_1).TotalMilliseconds <= 0)
{
    <div class="action-button">
        <a asp-action="AddIdea" asp-route-submissionid="@Model.Id" class="btn btn-success">Add Idea</a>
    </div>
}

<div class="table-container">
    <table class="styled-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Brief</th>
                <th>Views</th>
                <th>Like</th>
                <th>Dislike</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var idea in Ideas.Select((idea, index) => new { idea, index }))
            {
                <tr>
                    <td>@idea.idea.Title</td>
                    <td>@idea.idea.Brief</td>
                    <td>@idea.idea.View</td>
                    <td>@idea.idea.Reactions.Count(r => r.Type == 1)</td>
                    <td>@idea.idea.Reactions.Count(r => r.Type == 2)</td>
                    <td>
                        <a asp-action="IdeaDetails" class="btn btn-primary btn-sm" asp-route-id="@idea.idea.Id">Details</a>
                        <a asp-action="Like" class="btn btn-primary btn-sm" asp-route-ideaid="@idea.idea.Id">Like</a>
                        <a asp-action="Dislike" class="btn btn-primary btn-sm" asp-route-ideaid="@idea.idea.Id">Dislike</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="back-button">
    <a asp-action="Index" class="btn btn-secondary">Back to Staff Submission Overview</a>
</div>
