@model Idea.Models.Submission

@{
    ViewData["Title"] = "Edit Submission";
}

<style>
    body {
        background-color: #cdf2ee;
    }
</style>

<h1>Edit Submission</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Main Form -->
        <form id="editForm" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group" style="margin-bottom: 20px;">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label asp-for="Deadline_1" class="control-label"></label>
                <input asp-for="Deadline_1" type="date" class="form-control" />
                <span asp-validation-for="Deadline_1" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label asp-for="Deadline_2" class="control-label"></label>
                <input asp-for="Deadline_2" type="date" class="form-control" />
                <span asp-validation-for="Deadline_2" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <!-- Button to Trigger Modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmSaveModal">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 20px;">
    <a asp-action="Index" class="btn btn-secondary">Back to Submission Overview</a>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmSaveModal" tabindex="-1" aria-labelledby="confirmSaveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmSaveModalLabel">Confirm Save</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to save the changes to this submission?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <!-- Submit Button Inside Modal -->
                <button type="submit" class="btn btn-primary" form="editForm">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
